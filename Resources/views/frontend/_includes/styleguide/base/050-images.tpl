{* Icons *}
{block name="frontend_styleguide_base_icons"}
    <div class="sg-styleguide__section">
        <h2 id="sg-base-icons">{s name="headline" namespace="frontend/styleguide/base/icons"}Icons{/s}</h2>
        <p>{s name="copy" namespace="frontend/styleguide/base/icons"}{/s}</p>
        <div class="sg-layout">
            <div class="sg-layout__item u-1/12">
                {icon id='present' title='A little present'}
                <p>present</p>
            </div>
            <div class="sg-layout__item u-1/12">
                {icon id='check'}
                <p>check</p>
            </div>
        </div>
        {styleguide_function function='icon' id='present' title='A little present' styleguide-preview=false styleguide-doc=false}
        {styleguide_function function='icon' id='check' styleguide-preview=false styleguide-doc=false}
    </div>
{/block}

